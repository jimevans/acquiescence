{
  "name": "acquiescence",
  "version": "0.1.0",
  "description": "Library for querying and waiting for element states",
  "author": "Jim Evans",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jimevans/acquiescence.git"
  },
  "homepage": "https://github.com/jimevans/acquiescence#readme",
  "bugs": {
    "url": "https://github.com/jimevans/acquiescence/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json && npm run build:browser",
    "build:browser": "esbuild src/index.ts --bundle --format=iife --global-name=Acquiescence --outfile=dist/acquiescence.browser.js --sourcemap",    "dev": "tsc --project tsconfig.build.json --watch",
    "clean": "rm -rf dist",
    "lint": "npm run lint:types && npm run lint:eslint",
    "lint:types": "tsc --noEmit",
    "lint:src": "tsc --project tsconfig.build.json --noEmit",
    "lint:eslint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:browser": "vitest run --browser.enabled=true",
    "test:browser:watch": "vitest --browser.enabled=true",
    "test:browser:coverage": "vitest run --browser.enabled=true --coverage",
    "test:browser:ui": "vitest --browser.enabled=true --ui",
    "test:browser:headed": "vitest run --browser.enabled=true --browser.headless=false",
    "test:browser:debug": "vitest --browser.enabled=true --browser.headless=false --ui",
    "test:browser:chrome": "VITEST_BROWSER=chrome vitest run --browser.enabled=true",
    "test:browser:chrome:watch": "VITEST_BROWSER=chrome vitest --browser.enabled=true",
    "test:browser:chrome:headed": "VITEST_BROWSER=chrome vitest run --browser.enabled=true --browser.headless=false",
    "test:browser:firefox": "VITEST_BROWSER=firefox vitest run --browser.enabled=true",
    "test:browser:firefox:watch": "VITEST_BROWSER=firefox vitest --browser.enabled=true",
    "test:browser:firefox:headed": "VITEST_BROWSER=firefox vitest run --browser.enabled=true --browser.headless=false",
    "test:browser:safari": "VITEST_BROWSER=safari vitest run --browser.enabled=true --browser.headless=false",
    "test:browser:safari:watch": "VITEST_BROWSER=safari vitest --browser.enabled=true",
    "test:browser:safari:headed": "VITEST_BROWSER=safari vitest run --browser.enabled=true --browser.headless=false"
  },
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/browser": "^4.0.14",
    "@vitest/browser-webdriverio": "^4.0.14",
    "@vitest/coverage-istanbul": "^4.0.14",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/eslint-plugin": "^1.5.1",
    "@vitest/ui": "^4.0.14",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "jsdom": "^27.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^4.0.14",
    "webdriverio": "^9.21.0"
  }
}
